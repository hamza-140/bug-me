<%= form_with(model: [@project, @bug], local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :email, prompt: "Select developer" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
